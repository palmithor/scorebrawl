{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "files": {
    "ignore": [".next", "node_modules", ".idea", "bun.lockb", "dev"]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "ignore": ["packages/ui/src/components"],
    "rules": {
      "recommended": true
    }
  }
}
