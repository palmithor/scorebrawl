{
  "name": "turborepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write --config ./prettier.config.cjs \"**/*.{js,jsx,ts,tsx,md}\"",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.5",
    "prettier-plugin-tailwindcss": "0.5.5",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.0.14",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "postcss": "^8.4.32"
  }
}
