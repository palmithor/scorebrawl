{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
  "files": {
    "ignore": [
      ".next",
      "node_modules",
      ".idea",
      "bun.lockb",
      "dev",
      "deprecated-scorebrawl-app",
      ".trigger"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "apps/scorebrawl/src/components/ui",
      "apps/scorebrawl/src/hooks",
      "apps/scorebrawl/src/components/auto-form.tsx",
      "apps/scorebrawl/src/components/stepper.tsx"
    ],
    "rules": {
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": {
          "level": "error",
          "fix": "none"
        }
      }
    }
  }
}
