{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "BETTER_AUTH_SECRET",
        "DATABASE_URL",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "SENTRY_AUTH_TOKEN",
        "SENTRY_ENV",
        "SKIP_ENV_VALIDATION",
        "NODE_ENV",
        "SENTRY_ORG",
        "SENTRY_PROJECT",
        "TRIGGER_SECRET_KEY",
        "UPLOADTHING_TOKEN",
        "POLAR_ACCESS_TOKEN",
        "POLAR_SUCCESS_URL"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": false,
      "persistent": true
    }
  }
}
