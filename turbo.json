{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "SKIP_ENV_VALIDATION",
        "CLERK_SECRET_KEY",
        "CLERK_WEBHOOK_SECRET",
        "SENTRY_AUTH_TOKEN"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": false,
      "persistent": true
    }
  }
}
